{% extends 'admin/index.html.twig' %}
{% block title %}Intervention n°{{intervention.id}}
	|
	{{parent()}}
{% endblock %}
{% block body %}
	<div class="container">
		<div class="row">
			<div class="col">
				<h2 class="text-right ml-3 text-dark">Intervention N°
					{{intervention.id}}</h2>
				<div class="">
					<a class="btn btn-primary my-4 m-md-0" href="{{path('app_admin_interventions')}}" role="button">
						<i class="bi bi-arrow-left"></i>
						Retour à la liste
					</a>
				</div>
				<div class="shadow col-12 col-lg-10 col-xl-10 mx-auto my-4 py-3 px-3 rounded bg-white ">
					<div class="card d-flex flex-col justify-content-around mx-auto text-center">
						<h3 class="card-text">
							{{intervention.sujet}}</h3>
						<p class="card-text">Entreprise concernée(s) :

						</p>
						<p class="card-text">
							{% for user in intervention.users %}
								{% if loop.index == 1 %}
									{{user.entreprise}}

								{% else %}
									-
									{{user.entreprise}}
								{% endif %}


							{% endfor %}
						</p>
						<p class="card-text">Message (falcultatif) :
						</p>
						<p class="card-text">{{intervention.messageOptionnel}}</p>
						<br>
						<p class="card-text">Date de création :
							{{intervention.dateCreation|date('d/m/Y')}}</p>
						<p class="card-text">Du
							{{intervention.dateDebut|date('d/m/Y - H:i')}}
						</p>
						<p class="card-text">Au
							{{intervention.dateFin|date('d/m/Y - H:i')}}
						</p>
						<div class="card-text text-center my-3">
							<h4>
								<div class="text-danger d-inline-block">
									<i class="bi bi-exclamation-triangle"></i>
								</div>
								Souhaitez-vous annuler l'intervention ?
								<div class="text-danger d-inline-block">
									<i class="bi bi-exclamation-triangle"></i>
								</div>
							</h4>
						</div>
						<div class="text-center my-3">
							<form method='post'>
								<div class="col-sm-12">
									<a class="btn btn-primary" href="javascript:history.go(-1)" role="button">Revenir à la liste</a>
									<input class="btn btn-outline-secondary bg-danger text-white" type="submit" name="supprimer" value="Annuler l'intervention">
								</div>

							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div></div>{% endblock %}
