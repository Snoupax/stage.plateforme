{% extends 'admin/index.html.twig' %}

{% block title %}Plannig |
	{{parent()}}
{% endblock %}

{% block body %}
	{% for flashMessage in app.flashes('info')%}
		<div class="alert alert-info">{{flashMessage}}</div>
	{% endfor %}

	<div class="container-md" {{ stimulus_controller('planning')}}>
		<div class="row">
			<div class="col">
				<h2 class="text-right ml-3 text-dark">Planning</h2>
				<div class="">
					<a class="btn btn-primary" href="{{path('app_admin_interventions')}}" role="button">
						<i class="bi bi-file-earmark-diff"></i>
						Listing Intervention
					</a>
				</div>
				{% include "parts/flashbag.html.twig" %}
				<div class="py-2 py-md-5 my-auto h-100">
					<div class="row d-flex justify-content-center h-100">
						<div class="col col-lg-10 mb-4 overflow-hidden">
							<div class="shadow mb-3 bg-white rounded overflow-hidden">
								<div class="row g-0" style="min-height: 500px">
									<div id='action-schedule' class="d-flex flex-wrap"></div>
									<div id="schedule" class="overflow-hidden"></div>
									<div id="action-week"></div>
									<div id="week"></div>
									<div id="action-day"></div>
									<div id="day"></div>
									<div id="modal" class="col-12 py-3"></div>


									<div id="modalForm" class="col-12 py-3 vh-100">
										<div class="d-flex flex-row align-items-center h-100">
											<div class="card col-9 col-md-6 my-auto mx-auto text-center">
												<form class="p-3 col-12" method="post">
													<div class="my-3">

														<div class="my-3">
															<label for="dateFrom">Du</label>
															<input type="datetime-local" name="dateFrom" id="dateFrom">
														</div>
														<div class="my-3">
															<label for="dateTo">Au</label>
															<input type="datetime-local" name="dateTo" id="dateTo">
														</div>
														{{form(form)}}
															<input id="valid" class="btn btn-success" name="valid" type="submit" value="Envoyer">
														</div>

														<div>
															<button id="closeButton" type="button" class="btn-close" aria-label="Close"></button>
														</div>
													</div>
												</form>

											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div></div>{% endblock %}
