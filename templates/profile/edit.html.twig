{% extends 'base.html.twig' %}

{% block title %}Modifier votre profil |
	{{parent()}}
{% endblock %}

{% block body %}
	<div>
		<h1>Modifier le profil</h1>
		{{form_start(form)}}
		{{form_row(form.email)}}
		{{form_row(form.nom)}}
		{{form_row(form.prenom)}}
		{{form_row(form.entreprise)}}
		{{form_row(form.site_web)}}
		{% if is_granted('ROLE_ADMIN') %}
			{{form_row(form.activation)}}
		{% endif %}
		{{form_row(form.modifier)}}
		{{ form_row(form._token) }}
		{{ form_end(form, {render_rest: false}) }}
	</div>

{% endblock %}
