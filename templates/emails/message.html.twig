{% extends "emails/base.html.twig" %}

{% block mailbody %}
	<div role="article" aria-roledescription="email" lang="fr" style="text-size-adjust:100%;-webkit-text-size-adjust:100%;-ms-text-size-adjust:100%;background-color:#071E3F;">
		<table role="presentation" style="width:100%;border:none;border-spacing:0;">
			<tr>
				<td align="center" style="padding:0;">
					<table role="presentation" style="width:94%;max-width:600px;border:none;border-spacing:0;text-align:left;font-family:Arial,sans-serif;font-size:16px;line-height:22px;color:#363636;">
						<tr>
							<td style="padding:40px 30px 30px 30px;text-align:center;font-size:24px;font-weight:bold;">
								<a href="http://www.pixel-online.fr/" style="text-decoration:none;"><img src="https://sp-ao.shortpixel.ai/client/to_webp,q_glossy,ret_img/https://www.pixel-online.fr/wp-content/uploads/2017/07/logo-pixel.png" width="165" alt="Logo" style="width:365px;max-width:80%;height:auto;border:none;text-decoration:none;color:#ffffff;"></a>
							</td>
						</tr>
						<tr>
							<td style="padding:30px;background-color:#ffffff;">
								<h1 style="margin-top:0;margin-bottom:30px;font-size:26px;line-height:32px;font-weight:bold;letter-spacing:-0.02em;">{{title}}
								</h1>
								<h4>De l'administrateur de la plateforme</h4>
								<p style="margin-top:0;margin-bottom:25px;font-size:16px">Sujet :
									{{sujet}}
								</p>
								<p style="margin-top:0;margin-bottom:25px;font-size:16px">Message :
									{{contenu}}
								</p>
								<p style="margin:0;margin-bottom:25px; text-align:center">
									<a href="{{ url|raw }}" style="background: #0d6efd; text-decoration: none; padding: 10px 25px; color: #ffffff; border-radius: 4px; display:inline-block; mso-padding-alt:0;text-underline-color:#ff3884">
										<span style="mso-text-raise:10pt;font-weight:bold;">{{button}}</span>
									</a>
								</p>
								<p style="margin-top:0;margin-bottom:18px;font-size: 14px"></p>
							</td>
						</tr>
						<tr>
							<td style="padding:20px 30px 11px 30px;font-size:0;background-color:#FFFFFF;border-bottom:1px solid #f0f0f5;border-color:rgba(201,201,207,.35);">
								<div class="col-lge" style="display:inline-block;width:100%;max-width:395px;vertical-align:top;padding-bottom:20px;font-family:Arial,sans-serif;font-size:12px;line-height:22px;color:#363636;">
									Si le bouton ne fonctionne pas, voici le lien direct :
									<br>
									<a style="font-size:10px;" href="{{ url}}">{{ url }}</a>

								</div>
							</td>
						</tr>
					</table>
				</td>
			</tr>

			<tr>
				<td style="padding:30px;text-align:center;font-size:12px;background-color:#071E3F;color:#FFFFFF;">
					<p style="margin:0;font-size:14px;line-height:20px;">&reg; Pixel Online Creation
						{{date|date('Y')}}<br><a class="unsub" href="http://www.pixel-online.fr/" style="color:#cccccc;text-decoration:underline;">Site Web</a>
					</p>
				</td>
			</tr>
		</table>
	</div>

{% endblock %}
