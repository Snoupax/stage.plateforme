{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	{% block menu %}{% endblock %}
	<div class="container-fluid ps-md-0 w-100">
		<div class="row">
			<div class="col-md-8 col-lg-6">
				<div class="login d-flex align-items-center py-5">
					<div class="container">
						<div class="row">
							<div class="col-md-9 col-lg-8 mx-auto">
								<div>
									<img class="s-1 w-100" src="{{asset('build/images/pixel-online.gif')}}" alt="Pixel Online Creation">
								</div>
								<form method="post">
									{% if error %}
										<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
									{% endif %}
									{% include "parts/flashbag.html.twig" %}


									<div class="form-floating mb-3">
										<input type="email" value="{{ last_username }}" name="email" class="form-control" id="floatingInput" placeholder="name@example.com" autocomplete="email" required autofocus>
										<label for="floatingInput">Adresse Email</label>
									</div>
									<div class="form-floating mb-3">
										<input type="password" name="password" class=" form-control" id=" floatingPassword" placeholder="password" autocomplete="current-password" required>
										<label for="floatingPassword">Password</label>
									</div><input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
									<div class="form-check mb-3">
										<input class="form-check-input" type="checkbox" name="_remember_me" value="" id="rememberPasswordCheck">
										<label class="form-check-label" for="rememberPasswordCheck">
											Se souvenir de moi
										</label>
									</div>
									<div class="d-grid">
										<button class="btn btn-lg btn-primary" type="submit">
											Connexion
										</button>
									</div>
									<div class="d-flex justify-content-center my-3">
										<a id='forgottenPass' href="{{path('app_forgotten_password')}}">Mot de passe oublié ?</a>
									</div>


								</form>

							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="d-none d-md-flex col-md-4 col-lg-6 bg-bg-image">
				<div class="d-md-flex col-12 bg-image"></div>
			</div>
			<div class="d-none d-md-none d-lg-flex  col-md-4 col-lg-6 bg-text position-absolute">
				<h3 class="text-center text-white my-4">Bienvenue sur votre plateforme<br>
					d'échanges avec votre Agence Web</h3>
				<span class="text-center text-white my-2">Gérer vos Factures</span>
				<span class="text-center text-white my-2">Planning des interventions sur votre site web</span>
				<span class="text-center text-white my-2">Envoyez-nous vos demandes</span>
				<span class="text-center text-white my-2">Recevez des messages de votre coloborateur</span>

			</div>
		</div>
	</div>
{% endblock %}
