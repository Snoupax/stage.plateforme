{% extends 'admin/index.html.twig' %}

{% block title %}Listes des utilisateurs |
	{{parent()}}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col">
				<h2 class="text-right ml-3">Listing Utilisateurs</h2>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">id</th>
								<th scope="col">Entreprise</th>
								<th scope="col">Date de Création</th>
								<th scope="col">Date de Modification</th>
								<th scope="col">Détails</th>
								<th scope="col">Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for user in users %}
								<tr>
									<td scope="row">{{user.id}}</td>
									<td>{{user.entreprise}}</td>
									<td>{{user.dateCreation|date('d/m/Y')}}</td>
									<td>{{user.dateEdit|date('d/m/Y')}}</td>
									<td>
										{% if user.activation == 0 %}
											<span class="badge bg-primary">Non Activé</span>
										{% elseif user.activation == 1 %}
											<span class="badge bg-info">Activé</span>
										{% elseif user.activation == 2 %}
											<span class="badge bg-secondary">Desactivé</span>
										{% elseif user.activation == 3 %}
											<span class="badge bg-danger">Administrateur</span>
										{% endif %}
									</td>
									<td>
										<a class="badge bg-info text-dark" href="{{path('app_admin_show_user', {'id':user.id})}}">Profil</a>
										<a class="badge bg-warning text-dark" href="{{path('app_admin_edit_user', {'id':user.id})}}">Modifier</a>


										<a class="badge bg-danger text-white" href="{{path('app_admin_delete_user', {'id':user.id})}}">Supprimer</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	{% endblock %}
